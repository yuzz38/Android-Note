<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ФИО"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Контакты" android:textSize="18sp"/>

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Возраст" android:textSize="18sp"/>

    <EditText
        android:id="@+id/etInterests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Интересы" android:textSize="18sp"/>

    <EditText
        android:id="@+id/etSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Навыки" android:textSize="18sp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить" android:textSize="18sp"/>
</LinearLayout>
